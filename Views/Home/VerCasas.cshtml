@{
    ViewData["Title"] = "VerCasas";
}
  <link rel="stylesheet" href="site.css">
<div class="text-center">
      <h1>Selecciona tu propiedad favorita</h1>

<div class="Tarjetas">
      @foreach (Propiedades item in ViewBag.listaPropiedades)
      
      if (item.Estado == true){
          <div class="card">
              <button type="button" class="" data-bs-toggle="modal" data-bs-target="#ModalInmo" onclick="MostrarInmo(@item.IdInmobiliaria)"><img src="@item.ImagenPropiedad" class="card-img-top"></button>
            <div class="card-body">
                <button type="button" class="btn-primary0" data-bs-toggle="modal" data-bs-target="#ModalInmo" onclick="MostrarInmo(@item.IdInmobiliaria)">Ver Inmobiliaria</button>
                <button type="button" class="btn-primary0" data-bs-toggle="modal" data-bs-target="#ModalProp"onclick="MostrarProp(@item.IdPropiedad)" >Ver Propiedad</button>
                <button type="button" class="btn-primary0" data-bs-toggle="modal" data-bs-target="#ModalUbi"onclick="MostrarUbi(@item.IdDireccion)" >Ver Ubicacion</button>
                <a class = "lol" href='@Url.Action("Comprar","Home")'><button type="button" class="btn-primary1">Comprar aqui</button></a>
                <div class="rating">
                <input value="5" name="rate_@item.IdInmobiliaria" id="star5_@item.IdInmobiliaria" type="radio">
                    <label title="text" for="star5_@item.IdInmobiliaria"></label>
                <input value="4" name="rate_@item.IdInmobiliaria" id="star4_@item.IdInmobiliaria" type="radio">
                    <label title="text" for="star4_@item.IdInmobiliaria"></label>
                <input value="3" name="rate_@item.IdInmobiliaria" id="star3_@item.IdInmobiliaria" type="radio">
                    <label title="text" for="star3_@item.IdInmobiliaria"></label>
                <input value="2" name="rate_@item.IdInmobiliaria" id="star2_@item.IdInmobiliaria" type="radio">
                    <label title="text" for="star2_@item.IdInmobiliaria"></label>
               <input value="1" name="rate_@item.IdInmobiliaria" id="star1_@item.IdInmobiliaria" type="radio">
                    <label title="text" for="star1_@item.IdInmobiliaria"></label>
                </div>
            </div>
          </div>
     // }
    }
</div>

<!-- Modal -->
<div class="modal fade" id="ModalInmo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">INMOBILIARIA</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="TextoModalInmobiliaria" class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div> 
</div>
 

<!-- Modal -->
<div class="modal fade" id="ModalProp" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">PROPIEDAD</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
