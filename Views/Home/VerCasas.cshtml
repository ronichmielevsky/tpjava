@{
    ViewData["Title"] = "VerCasas";
}
  <link rel="stylesheet" href="site.css">
    <div class="text-center">     
      <h1>Selecciona tu propiedad favorita</h1>

<div class="Tarjetas">
      @foreach (Propiedades item in ViewBag.listaPropiedades)
      
      if (item.Estado == true){
          <div class="card">
              <button type="button" class="" data-bs-toggle="modal" data-bs-target="#ModalInmo" onclick="MostrarInmo(@item.IdInmobiliaria)"><img src="@item.ImagenPropiedad" class="card-img-top"></button>
            <div class="card-body">
                <button type="button" class="btn-primary0" data-bs-toggle="modal" data-bs-target="#ModalInmo" onclick="MostrarInmo(@item.IdInmobiliaria)">Ver Inmobiliaria</button>
                <button type="button" class="btn-primary0" data-bs-toggle="modal" data-bs-target="#ModalProp"onclick="MostrarProp(@item.IdPropiedad)" >Ver Propiedad</button>
                <button type="button" class="btn-primary0" data-bs-toggle="modal" data-bs-target="#ModalUbi"onclick="MostrarUbi(@item.IdDireccion)" >Ver Ubicacion</button>
                <a href='@Url.Action("Comprar", "Home", new { idPropiedad = @item.IdPropiedad, Precio=@item.IdPropiedad })'><button type="button" class="btn-primary1">Comprar aqu√≠</button></a>
            </div>
          </div>
     // }
    }
</div>

<!-- Modal -->
<div class="modal fade" id="ModalInmo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">INMOBILIARIA</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id="TextoModalInmobiliaria" class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div> 
</div>
 

